#!/bin/bash
# oneSentencePerLine

# 
sed 's/\([^]})'\''".!?][]}).!?]*\)\([!?]\)\([]})]*\)\([^]})'\''".!?]\)/\1\2\3__\2__\
\4/g
     s/\([^]})'\''".!?][]}).!?]*\)\([!?]\)\([]})]*\)$/\1\2\3__\2__/
     s/\([^]})'\''".!?][]})'\''".!?]*\.[]})'\''"]*\)\([^]})'\''".!?]\)/\1__.__\
\2/g
     s/[^]})'\''".!?][]})'\''".!?]*\.[]})'\''"]*$/&__.__/' $1 | 
awk 'BEGIN   { ORS=" " } 
	     { print }
/__[!?.]__$/ {print "\n" }'

